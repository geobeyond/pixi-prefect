[Unit]
Description=Prefect CPU worker
After=network.target
Requires=network.target

[Service]
Type=simple
User={{ prefect_user }}
Group={{ prefect_user }}
WorkingDirectory={{ prefect_home }}
Environment=PREFECT_HOME={{ prefect_home }}/.prefect
Environment=PREFECT_API_URL=http://{{ prefect_server_ip }}:4201/api
Environment=PYTHONPATH={{ prefect_home }}/flows

# identifier used for namespacing gpu ids
Environment=WORKER_ID={{ inventory_hostname }}

ExecStart={{ prefect_home }}/pixi-env/env/bin/prefect worker start --pool cpu-pool --limit {{ cpu_worker_limit | default(8) }}
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target
